    action RandomGenerator
        Array<integer> block
        integer i = 0
        SystemHelper freeze
            freeze:Sleep(5000)
        Random spin 
        repeat 40 times
            i =  spin:RandomIntegerBetween(1,100)
            boolean Check = HasElement(i,block)
            if Check = false
                block:Add(i)
            end
        end
            
        integer j = 0
        output "Array size " + block:GetSize()
        repeat 30 times
            say block:Get(j)
            freeze:Sleep(5000)
            output block:Get(j)
            j = j+1
        end
    end
    action HasElement(integer k,Array<integer> block) returns boolean
        boolean result = true
        result = block:Has(k) 
        return result 
    end
    
